<% provide(:title, @user.name) %>

<% flash.each do |key,value| %>
	<div class="alert alert-<%= key %>"><%= value %></div>
<% end %> 

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= load_user_avatar(@user) %>
				<p id="name">	
				  <strong>Name:</strong>
				  <%= @user.name %>
				</p>
				<p>
				  <strong>Email:</strong>
				  <%= @user.email %>
				</p>
			</h1>
		</section>

		<div class="span8">
			<% if @user.microposts.any? %>
				<h3>Microposts (<%= @user.microposts.count %>)</h3> 

				<ol class="microposts">
<!-- 					This part will automatically look for a _microposts partial .html.erb file
 -->					<%= render @microposts %> 
				</ol>
				
		<% end %>
  		</div>


		<%= link_to 'Edit', edit_user_path(@user) %> |
		<%= link_to 'Back', users_path %>
	</aside>
</div>
