<% provide(:title, @user.name) %>

<% flash.each do |key,value| %>
	<div class="alert alert-<%= key %>"><%= value %></div>
<% end %> 

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= load_user_avatar(@user) %>
				<p id="name">	
				  <strong>Name:</strong>
				  <%= @user.name %>
				</p>
				<p>
				  <strong>Email:</strong>
				  <%= @user.email %>
				</p>
			</h1>
		</section>
		<%= link_to 'Edit', edit_user_path(@user) %> |
		<%= link_to 'Back', users_path %>
	</aside>
</div>
